#include "main.h"
/**
* is_prime_number - Function that returns 1 if the integer is a prime number
* otherwise return 0.
* @n: The integer to be checked
*
* Return: 1 if n is a prime number, 0 otherwise
*/

int is_prime_number(int n)
{
int i, n;
if (n <= 1)
return (0);
for (i = 2; i * i <= n; i++)
{
if (n % i == 0)
return (0);
}
return (1);
}
